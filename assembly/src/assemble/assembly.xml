				<exclude>com.ability.ease.automation:automation-api</exclude>
				<exclude>com.ability.ease.automation:automation-impl</exclude>	
				<exclude>jsystem:jsystemCore</exclude>
				<exclude>jsystem:jsystemAgent</exclude>
				<exclude>jsystem:jsystemApp</exclude>
				<exclude>jsystem:ant-jsystem</exclude>
				<exclude>jsystem:jsystemCommon</exclude>
				<exclude>jsystem:j2autoit</exclude>
				<exclude>jsystem:cli</exclude>
				<exclude>jsystem:filetransfer</exclude>				
				<!--<exclude>jsystem:selenium-java-client-driver</exclude>-->
				<!--<exclude>jsystem:selenium-server</exclude>-->
				<exclude>jsystem:junit</exclude>
			</excludes>
        </dependencySet>
    
		<dependencySet>
            <outputDirectory>../</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>jsystem:jsystemAgent</include>
				<include>jsystem:jsystemApp</include>
				<include>jsystem:jsystemCore</include>
				<include>jsystem:ant-jsystem</include>
			</includes>				
		</dependencySet>

