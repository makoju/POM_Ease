    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>		 
			<directory>src/main/install/${resource-dir}</directory>
            <outputDirectory>..</outputDirectory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <lineEnding>keep</lineEnding>
        </fileSet>
    </fileSets>
    <dependencySets>   	    
		<dependencySet>
			<outputDirectory>../</outputDirectory>
			<excludes>			
				<exclude>org.apache.ws.commons:XmlSchema</exclude>				
